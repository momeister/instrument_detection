import numpy as np
import matplotlib.pyplot as plt
import librosa

# Pfad zur .wav-Datei
wav_file_path = 'langeWAV.wav'

# Wav-Datei einlesen
sample_rate, audio_data = librosa.load(wav_file_path)

# Erzeugen des Spektrogramms
spectrogram = librosa.core.specgram(audio_data, sr=sample_rate)

# Plotten des Spektrogramms
plt.figure(figsize=(10, 6))
plt.pcolormesh(spectrogram[1], spectrogram[0], spectrogram[2], shading='flat', cmap='viridis')
plt.colorbar(label='Leistung (dB)')
plt.xlabel('Zeit (s)')
plt.ylabel('Frequenz (Hz)')
plt.title('Spektrogramm')
plt.ylim(0, 4000)  # Begrenzen Sie die Frequenzachse nach Bedarf
plt.show()